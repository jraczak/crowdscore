<% if current_user.gone_for_a_week? %>
  <h1>
    We've missed you, <%= current_user.first_name %>!
  </h1>  
<% else %>
  <h1>
    Welcome back, <%= current_user.first_name %>!
  </h1>
<% end %>

<h4>User profile photo goes up here</h4>

<h4>Update your profile</h4>

<%= link_to "Update profile", edit_user_registration_path %>

<h4>Your Karma</h4>
  <p>Your contributions have earned you <%= pluralize(current_user.points, "point") %>.</p>



<! -- BEGIN NETWORK ACTIVITY SECTION -->
<h4>Your network's activity</h4>

<% activity = current_user.network_activity %>
<% if activity.empty? %>
  <p>No recent activity by your crowd.</p>
<% else %>
  <% activity.each do |a| %>
    <% if a.class == VenueScore %>
      <p>-<%= User.find(a.user_id).first_name %> posted a score of <%= a.computed_score %> to <%= link_to Venue.find(a.venue_id).name, Venue.find(a.venue_id) %>. (<%= time_ago_in_words(a.created_at) %> ago)</p><br>
    <% elsif a.class == Tip %>
      <p>-<%= User.find(a.user_id).first_name %> posted a tip to <%= link_to Venue.find(a.venue_id).name, Venue.find(a.venue_id) %>.<br>
      "<%= a.text %>"<br>
       (<%= time_ago_in_words(a.created_at) %> ago)
       </p>
    <% end %>
  <% end %>
<% end %>

<!-- END NETWORK ACTIVITY SECTION -->

<h4>People who follow you</h4>
  <p>You have <%= pluralize(current_user.followers.count, "follower") %>.</p><br>
  <% unless current_user.followers.empty? %>
    <% current_user.followers.each do |f| %>
      <%= link_to f.username, f %><br>
    <% end %>
  <% end %>

<h4>People you follow</h4>
  <p>You are following <%= pluralize(current_user.follows.count, "person") %>.</p><br>
  <% unless current_user.follows.empty? %>
    <% current_user.follows.each do |f| %>
      <%= link_to f.username, f %><br>
    <% end %>
  <% end %>

<h4>Your Lists</h4>
  <% if current_user.lists.empty? %>
    <p>You haven't created any lists yet.</p>
  <% else %>
    <% current_user.lists.each do |l| %>
      <%= l.name %><br>
    <% end %>
  <% end %>


