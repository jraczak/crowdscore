<%= render 'admin/subnav' %>

<h1><%= resource.username %></h1>

<p><%= resource.full_name %></p><br>
<p><%= mail_to resource.email %></p><br>

<p><%= resource.access_locked? ? "Locked: #{resource.lock_reason}" : "Active" %></p><br>



<% if resource.access_locked? %>
  <%= link_to "Unlock user", admin_user_lock_path(resource), method: :delete, confirm: "You are about to unlock #{resource.username}. Are you sure?" %><br>
<% else %>
  <%= link_to "Lock user", new_admin_user_lock_path(resource) %><br>
<% end %>
<%= link_to "Edit user", edit_admin_user_path(resource) %><br>
<%= link_to "Delete user", admin_user_path(resource), method: "delete", confirm: "Are you sure you want to delete this user? This cannot be undone." %>

