<%= render 'admin/subnav' %>

<h1>Create a new venue tag category</h1>

<%= simple_form_for resource, :url => {:controller => "venue_tag_categories", :action => "create"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  
  <%= f.association :venue_categories, as: :check_boxes, label_method: :name, value_method: :id %><br>
  
  <%= f.button :submit, "Create new category" %>
<% end %>